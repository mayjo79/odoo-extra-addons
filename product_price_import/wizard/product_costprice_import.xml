<openerp>
    <data>

        <record id="product_costprice_import_view_form" model="ir.ui.view">
            <field name="name">product.costprice.import.form</field>
            <field name="model">product.costprice.import</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Import File">
                    <group col="4">
                        <separator string="Select your file :" colspan="4"/>
                        <field name="product_costprice_data" filename="stock_level_fname"/>
                        <field name="product_costprice_fname" readonly="1"/>
                        <newline/>
                        <field name="csv_separator"/>
                        <field name="decimal_separator"/>
                        <field name="codepage"/>
                    </group>
                    <footer>
                        <button name="product_costprice_import" string="_Import" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_costprice_import_view_form_result" model="ir.ui.view">
            <field name="name">product.costprice.import.form.result</field>
            <field name="model">product.costprice.import</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Import File">
                    <separator colspan="4" string="Results :"/>
                    <field name="note" colspan="4" nolabel="1" width="850" height="400"/>
                    <footer>
                        <button string="Close" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_costprice_import_view_action" model="ir.actions.act_window">
            <field name="name">Import Cost Price</field>
            <field name="res_model">product.costprice.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="product_costprice_import_view_form"/>
        </record>

        <menuitem id="product_costprice_import_menu"
                  action="product_costprice_import_view_action"
                  parent="price_import_menu"/>

    </data>
</openerp>